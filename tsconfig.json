{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "types": [
            "node",
            "mocha",
            "chai"
        ],
        "outDir": "./dist",
        "strict": true
    }
}